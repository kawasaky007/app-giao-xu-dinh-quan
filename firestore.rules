rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getRole(uid) {
      // Safely access role data. Returns null if document or field doesn't exist.
      return get(/databases/$(database)/documents/roles/$(uid)).data.role;
    }

    function isAdmin() {
      return isSignedIn() && getRole(request.auth.uid) == 'admin';
    }

    function isEditor() {
      let userRole = getRole(request.auth.uid);
      return isSignedIn() && (userRole == 'editor' || userRole == 'admin');
    }

    function isAuthor() {
      let userRole = getRole(request.auth.uid);
      return isSignedIn() && (userRole == 'author' || userRole == 'editor' || userRole == 'admin');
    }

    // Collections
    match /users/{userId} {
      // A user can create and update their own profile.
      // They can read their own profile, or an admin can read it.
      // Only an admin can delete a user profile document.
      allow read: if isOwner(userId) || isAdmin();
      allow create, update: if isOwner(userId);
      allow delete: if isAdmin();
    }

    match /roles/{userId} {
      // Any authenticated user can read their own role. Admins can read any role.
      allow get: if isOwner(userId) || isAdmin();
      // Only admins can see a list of all roles.
      allow list: if isAdmin();
      // A user can create their own role document when signing up.
      // An admin can update or delete any role document.
      // WARNING: The 'create' rule is permissive to bootstrap the first admin user.
      // For production, you should secure this, e.g., by using a Cloud Function.
      allow create: if isOwner(userId);
      allow update, delete: if isAdmin();
    }

    match /contactSubmissions/{contactSubmissionId} {
      // Anyone can create a contact submission.
      allow create: if true;
      // Only admins can read or delete submissions.
      allow read, update, delete: if isAdmin();
    }

    match /news/{articleId} {
      // Public users can read published articles.
      // Editors and admins can read any article (including drafts).
      allow read: if (resource.data.status == 'published') || isEditor();
      
      // Editors and admins can create, update, and delete any article.
      allow write: if isEditor();
    }

    match /events/{eventId} {
      // Publicly readable.
      allow read: if true;
      // Writable only by editors and admins.
      allow write: if isEditor();
    }

    match /faq/{faqId} {
      // Publicly readable.
      allow read: if true;
      // Writable only by editors and admins.
      allow write: if isEditor();
    }

    match /albums/{albumId} {
      // Publicly readable.
      allow read: if true;
      // Writable only by editors and admins.
      allow write: if isEditor();
    }
    
    match /videos/{videoId} {
      // Publicly readable.
      allow read: if true;
      // Writable only by editors and admins.
      allow write: if isEditor();
    }
  }
}
