rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getRole(uid) {
      // Safely access role data. Returns null if document or field doesn't exist.
      return get(/databases/$(database)/documents/roles/$(uid)).data.role;
    }

    function isAdmin() {
      return isSignedIn() && getRole(request.auth.uid) == 'admin';
    }

    function isEditor() {
      let userRole = getRole(request.auth.uid);
      return isSignedIn() && (userRole == 'editor' || userRole == 'admin');
    }

    function isAuthor() {
      let userRole = getRole(request.auth.uid);
      return isSignedIn() && (userRole == 'author' || userRole == 'editor' || userRole == 'admin');
    }

    // Collections
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create, update: if isOwner(userId);
      allow delete: if isAdmin();
    }

    match /roles/{userId} {
      // Any authenticated user can read their own role. Admins can read any role.
      allow get: if isOwner(userId) || isAdmin();
      // Only admins can see a list of all roles.
      allow list: if isAdmin();
      // Only admins can create, update, or delete roles.
      allow write: if isAdmin();
    }

    match /contactSubmissions/{contactSubmissionId} {
      allow get, list, update, delete: if isAdmin();
      allow create: if true; // Anyone can submit the contact form
    }

    match /news/{articleId} {
      // Allow public read for published articles.
      allow get: if resource.data.status == 'published';
      // Allow public list for published articles (client will filter).
      allow list: if true; 
      // Allow editors and admins to create, update, and delete any article.
      allow write: if isEditor();
    }

    match /events/{eventId} {
      allow read: if true;
      allow write: if isEditor();
    }

    match /faq/{faqId} {
      allow read: if true;
      allow write: if isEditor();
    }

    match /albums/{albumId} {
      allow read: if true;
      allow write: if isEditor();
    }
    
    match /videos/{videoId} {
      allow read: if true;
      allow write: if isEditor();
    }
  }
}
