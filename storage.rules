rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      // Allow public read access to all files so they can be viewed in the app
      allow read: if true;
      // Allow write access only to authenticated users (admins, editors, etc.)
      allow write: if request.auth != null;
    }
  }
}
